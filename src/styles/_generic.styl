html
  font-size: 18px
  font-family: Helvetica, sans-serif
  background: $white
  box-sizing: border-box
*,
*:after,
*:before
  box-sizing: inherit
a
  color: $accent-color
  text-decoration: none
  transition: all 0.4s
  &:hover
    color: darken($accent-color, 10%)
p
  line-height: 1.3
section
  max-width: $max-width
  margin: 0 auto
  padding-top: ($margin * 2)
.section-title
  font-size: 2rem
  font-weight: bold
  text-align: center
  margin: 0 1rem 40px 1rem
  text-transform: uppercase
  display: inline-block
  border-bottom: 3px solid $accent-color
@media (min-width: 700px)
  .section-title
    margin: 0 0 40px 0
.inner
  max-width: $max-width
  margin: 0 auto
btn($border = "none")
  display: inline-block
  line-height: 1rem
  vertical-align: middle
  if $border == "none"
    border: none
  else
    border: $border solid $white
  color: $white
  padding: 0.75em 1.25em
  text-decoration: none
  &:hover
    color: $accent-color
    if $border == "none"
      border: none
    else
      border: $border solid $accent-color
btn-small()
  padding: 0.25rem 0.75rem
btn-dark()
  border: 1px solid $primary-color-dark
  color: $primary-color-dark
.icon
  display: inline-block
  width: 1em
  height: 1em
  stroke-width: 0
  stroke: currentColor
  fill: currentColor
.icon-linkedin-square
  width: 0.8571415841579437em
.icon-twitter
  width: 0.9285703301429749em
.icon-github
  width: 0.8571436107158661em